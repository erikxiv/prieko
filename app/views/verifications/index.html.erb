<h1>Listing verifications</h1>

<form name="filter" method="GET">
	<select name="year" onchange='this.form.submit()'>
		<%= options_for_select(@years.insert(0,"All"), @year) %>
	</select>
	<select name="category" onchange='this.form.submit()'>
		<%= options_for_select(@categories.insert(0,"All"), @category) %>
	</select>
</form>


<table id="hor-minimalist-b">
	<thead>
  <tr>
    <th>Date</th>
    <th>Description</th>
    <th>Amount</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
	</thead>

<tbody>
<% @verifications.each do |verification| %>
  <tr>
    <td><%= verification.verification_date %></td>
    <td><%= verification.description %></td>
    <td><%= verification.amount %></td>
    <td><%= verification.category %></td>
    <td><%= link_to 'Show', verification %></td>
    <td><%= link_to 'Edit', edit_verification_path(verification) %></td>
    <td><%= link_to 'Destroy', verification, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Verification', new_verification_path %>
